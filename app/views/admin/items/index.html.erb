  <div class="row justify-content-between">
    <div class="col-auto mt-5" style="background-color: darkgray;">
     <h5>商品一覧</h5>
    </div>
    <div class="col-auto mt-5">
      <h2>
       <%= link_to new_admin_item_path, class: 'btn btn-outline-secondary mr-2' do %>
       <i class="fa-regular fa-pen-to-square"></i>
       <% end %>
      </h2>
    </div>
  </div>
  <br>

  <table class="table justify-content-center">
   <thead>
    <tr>
      <th scope="col-1">商品ID</th>
      <th scope="col-4">商品名</th>
      <th scope="col-3">税抜価格</th>
    </tr>
   </thead>
   <tbody>
     <% @items.each do |item| %>
    <tr>
      <th scope="row"><%= item.id %></th>
      <td><%= link_to item.name, admin_item_path(item.id) %></td>
      <td><%= item.price %></td>
    </tr>
     <% end %>

   </tbody>
  </table>

  <div class="row justify-content-md-center my-5">
    <div class="col col-md-auto">
     <%= paginate @items, theme: 'twitter-bootstrap-4' %>
    </div>
  </div>