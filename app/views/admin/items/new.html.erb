<div>
   <%= flash[:notice] %>
</div>

  <div class="row">
    <div class="col-auto mt-5" style="background-color: darkgray;">
     <h5>商品新規登録</h5>
    </div>
  </div>
  <br>

<%= form_with model: @item, url: '/admin/items', method: :post do |f| %>

<div class="row justify-content-center">
 <div class="col-3 me-2">
  <p>商品画像</p>
 </div>
 <div class="col-6">
  <%= f.file_field :image, accept: "image/*", size: "200x200" %>
 </div>
</div>

<div class="row justify-content-center">
 <div class="col-3 me-2">
  <p>商品名</p>
 </div>
 <div class="col-6">
  <%= f.text_field :name, size: "30x1" %>
 </div>
</div>

<div class="row justify-content-center">
 <div class="col-3 me-2">
  <p>商品説明</p>
 </div>
 <div class="col-6">
  <%= f.text_area :introduction, size: "30x7" %>
 </div>
</div>

<div class="row justify-content-center">
 <div class="col-3 me-2">
  <p>税抜価格</p>
 </div>
 <div class="col-6">
  <%= f.text_field :price, size: "30x1" %>円
 </div>
</div>
  <br>

<!--ジャンル、販売ステータスはチャレンジ-->
<div class="row justify-content-center">
  <%= f.submit '新規登録', class: 'btn btn-success px-5'%>
</div>
 <% end %>

