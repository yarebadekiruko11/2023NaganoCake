
  <div class="row">
    <div class="col-auto mt-5" style="background-color: darkgray;">
     <h5>会員一覧</h5>
    </div>
  </div>
  <br>

  <table class="table">
   <thead>
    <tr>
      <th scope="col">会員ID</th>
      <th scope="col">氏名</th>
      <th scope="col">メールアドレス</th>
      <th scope="col">ステータス</th>
    </tr>
   </thead>
   <tbody>
     <% @customers.each do |customer| %>
    <tr>
      <th scope="row"><%= customer.id %></th>
      <td><%= link_to customer.last_name << customer.first_name, admin_customer_path(customer.id) %></td>
      <td><%= customer.email %></td>
      <td><%= customer.is_deleted %></td>
    </tr>
     <% end %>

   </tbody>
  </table>

